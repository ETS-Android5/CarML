<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.tudublin.carml">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/carml_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/carml_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarML"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="fullSensor"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PricePredictionActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".ResultActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".FuelInformationActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".PetrolActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".DieselActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".ElectricActivity"
            android:screenOrientation="fullSensor">
        </activity>
    </application>

</manifest>
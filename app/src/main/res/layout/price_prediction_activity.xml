<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PricePredictionActivity"
    android:background="@drawable/tarmac_wallpaper"
    android:orientation="vertical">

    <!-- View for banner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height"
            android:background="@drawable/price_prediction_banner"
            android:contentDescription="@string/noCD"/>
    </RelativeLayout>

    <!-- View for back arrow -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/back_arrow"
            android:contentDescription="@string/back_arrowCD"/>
    </RelativeLayout>

    <!-- Parent view for input form -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- View to hold the input form-->
        <RelativeLayout
            android:id="@+id/input_form"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle"
            android:layout_marginTop="@dimen/margin30">

            <TextView
                android:id="@+id/manufacturer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin30"
                android:layout_marginStart="@dimen/margin30"
                android:text="@string/manufacturer"
                android:textSize="@dimen/heading_size"/>

            <EditText
                android:id="@+id/manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="240dp"
                android:layout_below="@id/manufacturer_label"
                android:layout_marginStart="@dimen/margin30"
                android:autofillHints="Manufacturer"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/model_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/manufacturer"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginStart="@dimen/margin30"
                android:text="@string/model"
                android:textSize="@dimen/heading_size"/>

            <EditText
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="240dp"
                android:layout_below="@id/model_label"
                android:layout_marginStart="@dimen/margin30"
                android:autofillHints="Manufacturer"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/model"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginStart="@dimen/margin30"
                android:text="@string/year"
                android:textSize="@dimen/heading_size"/>

            <EditText
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="240dp"
                android:layout_below="@id/year_label"
                android:layout_marginStart="@dimen/margin30"
                android:autofillHints="Manufacturer"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:inputType="number"/>

            <TextView
                android:id="@+id/engine_size_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/year"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginStart="@dimen/margin30"
                android:text="@string/engine_size"
                android:textSize="@dimen/heading_size"/>

            <EditText
                android:id="@+id/engine_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="240dp"
                android:layout_below="@id/engine_size_label"
                android:layout_marginStart="@dimen/margin30"
                android:autofillHints="Manufacturer"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:inputType="numberDecimal"/>

            <TextView
                android:id="@+id/fuel_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/engine_size"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginStart="@dimen/margin30"
                android:text="@string/fuel_type"
                android:textSize="@dimen/heading_size"/>

            <EditText
                android:id="@+id/fuel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="240dp"
                android:layout_below="@id/fuel_type_label"
                android:layout_marginStart="@dimen/margin30"
                android:autofillHints="Manufacturer"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:inputType="textCapWords"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/submit_button"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="@drawable/submit"
            android:layout_below="@id/input_form"
            android:layout_marginStart="@dimen/margin30"
            android:layout_marginTop="@dimen/margin10"
            android:contentDescription="@string/submit"/>
    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PricePredictionActivity"
    android:background="@drawable/tarmac_wallpaper"
    android:orientation="vertical">

    <!-- Main View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main RelativeLayout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Layout for banner -->
            <RelativeLayout
                android:id="@+id/banner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/banner_height"
                    android:background="@drawable/result_banner"
                    android:contentDescription="@string/noCD"/>
            </RelativeLayout>

            <!-- Layout for back arrow -->
            <RelativeLayout
                android:id="@+id/arrow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner_layout"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10">

                <ImageButton
                    android:id="@+id/back_arrow"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/back_arrow"
                    android:contentDescription="@string/back_arrowCD"/>
            </RelativeLayout>

            <!-- Layout for the result -->
            <RelativeLayout
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_below="@id/arrow_layout"
                android:layout_marginStart="@dimen/margin20"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle">

                <ImageView
                    android:id="@+id/result_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin20"
                    android:layout_marginBottom="@dimen/margin20"
                    android:layout_marginStart="@dimen/margin20"
                    android:src="@drawable/car_wireframe_white"
                    android:contentDescription="@string/result_imageCD"/>

                <TextView
                    android:id="@+id/price_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_image"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/price" />

                <TextView
                    android:id="@+id/result_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/price_label"
                    android:layout_below="@id/result_image"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/manufacturer_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_price"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/manufacturer"/>

                <TextView
                    android:id="@+id/result_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/manufacturer_label"
                    android:layout_below="@id/result_price"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/model_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_manufacturer"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/model" />

                <TextView
                    android:id="@+id/result_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/model_label"
                    android:layout_below="@id/result_manufacturer"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/year_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_model"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/year" />

                <TextView
                    android:id="@+id/result_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/year_label"
                    android:layout_below="@id/result_model"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/fuel_type_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_year"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/fuel_type" />

                <TextView
                    android:id="@+id/result_fuel_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/fuel_type_label"
                    android:layout_below="@id/result_year"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/horsepower_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_fuel_type"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/horsepower" />

                <TextView
                    android:id="@+id/result_horsepower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/horsepower_label"
                    android:layout_below="@id/result_fuel_type"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/transmission_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_horsepower"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/transmission" />

                <TextView
                    android:id="@+id/result_transmission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/transmission_label"
                    android:layout_below="@id/result_horsepower"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/drivetrain_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_transmission"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/drivetrain" />

                <TextView
                    android:id="@+id/result_drivetrain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/drivetrain_label"
                    android:layout_below="@id/result_transmission"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/num_doors_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_drivetrain"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/no_of_doors" />

                <TextView
                    android:id="@+id/result_num_doors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/num_doors_label"
                    android:layout_below="@id/result_drivetrain"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <TextView
                    android:id="@+id/body_type_label"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_num_doors"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/body_type" />

                <TextView
                    android:id="@+id/result_body_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/body_type_label"
                    android:layout_below="@id/result_num_doors"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/unknown" />

                <ImageButton
                    android:id="@+id/done_button"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/result_body_type"
                    android:layout_marginTop="@dimen/margin30"
                    android:background="@drawable/done"
                    android:contentDescription="@string/done_buttonCD"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PricePredictionActivity"
    android:background="@drawable/tarmac_wallpaper"
    android:orientation="vertical">

    <!-- Layout for banner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height"
            android:background="@drawable/result_banner"
            android:contentDescription="@string/noCD"/>
    </RelativeLayout>

    <!-- Layout for back arrow -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/back_arrow"
            android:contentDescription="@string/back_arrowCD"/>
    </RelativeLayout>

    <!-- Parent layout for the result -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Layout for the result -->
        <RelativeLayout
            android:id="@+id/result"
            android:layout_width="300dp"
            android:layout_height="550dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin30"
            android:background="@drawable/rectangle">

            <ImageView
                android:id="@+id/result_image"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin20"
                android:src="@drawable/car_wireframe" />

            <TextView
                android:id="@+id/manufacturer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/result_image"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:text="@string/manufacturer"/>

            <TextView
                android:id="@+id/result_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/manufacturer_label"
                android:layout_below="@id/result_image"
                android:layout_marginStart="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="(manufacturer)" />

            <TextView
                android:id="@+id/model_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/manufacturer_label"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:text="@string/model" />

            <TextView
                android:id="@+id/result_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/model_label"
                android:layout_below="@id/result_manufacturer"
                android:layout_marginStart="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="(model)" />

            <TextView
                android:id="@+id/year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/model_label"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:text="@string/year" />

            <TextView
                android:id="@+id/result_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/year_label"
                android:layout_below="@id/result_model"
                android:layout_marginStart="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="(year)" />

            <TextView
                android:id="@+id/fuel_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/year_label"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:text="@string/fuel_type" />

            <TextView
                android:id="@+id/result_fuel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fuel_type_label"
                android:layout_below="@id/result_year"
                android:layout_marginStart="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="(fuel type)" />

            <ImageButton
                android:id="@+id/done_button"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/fuel_type_label"
                android:layout_marginTop="@dimen/margin30"
                android:background="@drawable/done"/>
        </RelativeLayout>
    </RelativeLayout>



</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Banner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/banner_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/banner_text_size</item>
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/banner</item>
    </style>
    <style name="LandBanner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/land_banner_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/land_banner_text_size</item>
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/banner</item>
    </style>
    <style name="HeaderText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/heading_size</item>
    </style>
    <style name="LandHeadText">
        <item name="android:textSize">@dimen/land_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RegularText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>
    <style name="LandRegText">
        <item name="android:textSize">@dimen/land_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpinnerEnd">
        <item name="android:dropDownListViewStyle">@drawable/spinner_end</item>
        <item name="android:listSelector">@drawable/spinner_end</item>
        <item name="android:dropDownSelector">@drawable/spinner_end</item>
    </style>
    <style name="MenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/menu_button_text_size</item>
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LandMenuButton">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">225dp</item>
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/land_menu_button_text_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ElectricLinkLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">@dimen/margin20</item>
        <item name="android:layout_marginEnd">@dimen/margin20</item>
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:padding">@dimen/margin10</item>
    </style>
    <style name="ElectricLinkImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/margin10</item>
        <item name="android:contentDescription">@string/noCD</item>
    </style>
    <style name="ElectricLinkText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/heading_size</item>
        <item name="android:layout_marginStart">@dimen/margin30</item>
        <item name="android:padding">@dimen/margin10</item>
    </style>
</resources>
